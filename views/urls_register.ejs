<!-- views register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Tiny App</title>
  <% include partials/_head %>
</head>
<body>
  <% include partials/_error%>
  <div class="container">  
      <h1>Tiny App <i class="far fa-hand-scissors"></i></h1>
      <h2>Register</h2>
      <form method="POST" action="/register" class="form-control">
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter your email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>

          <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
      </form>
        <br>
        <button type="submit" value="back" class="btn btn-secondary"><a href="/login" style="color: white">Back to Login</button></a>
  </div>    
  <% include partials/_footer %>
</body>
</html>  
<!-- views index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <% include partials/_head %>
 
</head>
<body>
  <% include partials/_header %>
  
  <div class="container form-control"> 
    <h2 class="dark-title">Your short URLs</h2>
    <table class="table table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL:</th>
          <th scope="col">Actions:</th>
        </tr>
      </thead>
      <tbody>
        <!-- EJS Code -->
        <% for (var item in urls) { %>
          <tr> 
            <th scope="row">#</th>
              <td><a href="<%= urls[item].url %>" class="blue-url"><%= item %></a></td>
              <td><a href="<%= urls[item].url %>" class="blue-url"><%= urls[item].url %></a></td>
              <td>
                <a href="/urls/<%= item %>"><button type="edit" value="Edit" class="btn btn-secondary">Edit</button></a></td>
              <td>
                <form method="POST" action="/urls/<%= item %>/delete">
                <button type="delete" value="Delete" class="btn btn-danger">Delete</button>
                </form>
              </td>
          </tr>
        <% }; %>   
      </tbody>
    </table>
  </div>  
  <% include partials/_footer %>
</body>
</html>

<!-- views index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <% include partials/_header %>
</head>
<body>
  <div class="container"> 
    <h1 class="display-5 ml-1 p-3">Your short URLs</h1>
    <table class="table table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL:</th>
          <th scope="col">Actions:</th>
        </tr>
      </thead>
        <tbody>
          <!-- EJS Code -->
          <% for (var item in urls) { %>
          <tr> 
              <th scope="row">#</th>
              <td><%= item %></td>
              <td>( <%= urls[item] %> )</td>
              <td>
                <button type="edit" value="Edit" class="btn btn-secondary"><a href="/urls/<%= item %>" style="color: white">Edit</button></a></td>
              <td>
                <form method="POST" action="/urls/<%= item %>/delete">
              <button type="delete" value="Delete" class="btn btn-danger">Delete</button>
              </form></td>
          </tr>
          <% }; %>   
        </tbody>
    </table>
  </div>  
</body>
</html>
